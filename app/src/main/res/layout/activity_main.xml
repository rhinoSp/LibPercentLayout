<?xml version="1.0" encoding="utf-8"?>
<com.rhino.percentlayout.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.rhino.percentlayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.rhino.percentlayout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="20dp"
                android:background="#000000"
                app:layout_widthPercent="12%h"
                app:layout_heightRelative="1"
                app:layout_widthRelative="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                app:layout_paddingLeftPercent="-.9%h"
                app:layout_textSizePercent="10%sw" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                app:layout_textSizePercent="10%sw" />

        </com.rhino.percentlayout.PercentLinearLayout>
    </com.rhino.percentlayout.PercentLinearLayout>
</com.rhino.percentlayout.PercentLinearLayout>